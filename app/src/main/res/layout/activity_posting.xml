<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.2"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/goBackBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/go_back_btn" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.2"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/layout_underline"
                android:scrollbars="vertical">

                <EditText
                    android:id="@+id/postEditTxt"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:background="@null"
                    android:hint="글을 작성해주세요." />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="평점"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="7dp"
                android:background="@drawable/star_btn"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="7dp"
                android:background="@drawable/star_btn"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="7dp"
                android:background="@drawable/star_btn"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/star4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="7dp"
                android:background="@drawable/star_btn"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/star5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="7dp"
                android:background="@drawable/star_btn"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="2.5">

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="등록"
                android:textSize="15dp" />
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationBtm"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.1"
            android:background="@color/white"
            app:itemIconTint="@color/fourth"
            app:itemTextColor="@color/fourth"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_navi" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>